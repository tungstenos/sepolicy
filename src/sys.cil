;; userspace_initial_context
;; Although we run init in its own domain, processes may
;; run before init (e.g. plymouth) after policy load, so
;; start off in sys.id:sys.role:sys.subj:s0.
(sidcontext init (sys.id sys.role sys.subj sys.lowlow))

(block sys

  (level low (s0))
  (level high (s0 .catset))

  (levelrange lowlow (low low))
  (levelrange lowhigh (low high))

  (role role)
  (roletype role subj)

  (user id)
  (userrole id role)

  (userlevel id low)
  (userrange id lowhigh)

  (blockinherit .subj.template)

  (call .obj.role (role))

  (call .unconfined.type (subj)))
