(block glib

  (block compileschemas

    (blockinherit .sys.agent.template)

    (call data.manage_file_files (subj))
    (call data.readwrite_file_dirs (subj))

    (call .locale.data.map_file_pattern.type (subj))
    (call .locale.read_file_pattern.type (subj))

    (call .selinux.linked.type (subj))

    (call .xattr.getattr_fs_pattern.type (subj)))

  (block data

    ;; part of gsettings-desktop-schemas
    (filecon "/usr/share/GConf" dir file_context)
    (filecon "/usr/share/GConf/.*" any file_context)

    (filecon "/usr/share/glib-2\.0" dir file_context)
    (filecon "/usr/share/glib-2\.0/.*" any file_context)

    (macro data_file_type_transition_file ((type ARG1))
           (call .data.file_type_transition
                 (ARG1 file dir "GConf"))
           (call .data.file_type_transition
                 (ARG1 file dir "glib-2.0")))

    (macro map_file_files ((type ARG1))
           (allow ARG1 file (file (map))))

    (blockinherit .file.data.base_template)
    (blockinherit .file.macro_template_dirs)
    (blockinherit .file.macro_template_files)

    (block map_file_pattern

      (macro type ((type ARG1))
             (typeattributeset typeattr ARG1))

      (typeattribute typeattr)

      (call map_file_files (typeattr))

      (call .data.search_file_pattern.type (typeattr)))

    (block read_file_pattern

      (macro type ((type ARG1))
             (typeattributeset typeattr ARG1))

      (typeattribute typeattr)

      (call list_file_dirs (typeattr))
      (call read_file_files (typeattr))

      (call .data.search_file_pattern.type (typeattr))))

  (block gio

    (block lib

      (filecon "/usr/lib/([^/]+/)?gio" dir file_context)
      (filecon "/usr/lib/([^/]+/)?gio/.*" any file_context)

      (macro lib_file_type_transition_file ((type ARG1))
             (call .lib.file_type_transition
                   (ARG1 file dir "gio")))

      (blockinherit .file.lib.template)
      (blockinherit .file.macro_template_dirs)

      (block list_file_pattern

        (macro type ((type ARG1))
               (typeattributeset typeattr ARG1))

        (typeattribute typeattr)

        (call list_file_dirs (typeattr))

        (call .lib.search_file_pattern.type (typeattr))))

    (block linked

      (macro type ((type ARG1))
             (typeattributeset typeattr ARG1))

      (typeattribute typeattr)

      (call lib.mapexecute_file_files (typeattr))
      (call lib.read_file_files (typeattr))

      (call lib.list_file_pattern.type (typeattr)))

    (block querymodules

      (blockinherit .sys.agent.template)

      (allow subj self (process (execmem)))

      (call lib.manage_file_files (subj))
      (call lib.mapexecute_file_files (subj))
      (call lib.readwrite_file_dirs (subj))

      ;; /usr/lib64/gtk-4.0/4.0.0/printbackends/libprintbackend-cups.so
      (call .gtk.lib.manage_file_files (subj))
      (call .gtk.lib.mapexecute_file_files (subj))
      (call .gtk.lib.readwrite_file_dirs (subj))

      (call .locale.data.map_file_pattern.type (subj))
      (call .locale.read_file_pattern.type (subj))

      (call .selinux.linked.type (subj))

      (call .xattr.getattr_fs_pattern.type (subj))))

  (block home

    (block conf

      (filecon "HOME_DIR/\.config/glib-2\.0" dir file_context)
      (filecon "HOME_DIR/\.config/glib-2\.0/.*" any file_context)

      (macro map_file_files ((type ARG1))
             (allow ARG1 file (file (map))))

      (macro user_home_conf_file_type_transition_file ((type ARG1))
             (call .user.home.conf.file_type_transition
                   (ARG1 file dir "glib-2.0")))

      (macro watch_file_dirs ((type ARG1))
             (allow ARG1 file (dir (watch))))

      (blockinherit .file.macro_template_dirs)
      (blockinherit .file.macro_template_files)
      (blockinherit .file.user.home.conf.base_template)

      (block manage_file_pattern

        (macro type ((type ARG1))
               (typeattributeset typeattr ARG1))

        (typeattribute typeattr)

        (call manage_file_dirs (typeattr))
        (call manage_file_files (typeattr))
        (call user_home_conf_file_type_transition_file (typeattr))

        (call .user.home.conf.create_file_dir_pattern.type (typeattr)))

      (block map_file_pattern

        (macro type ((type ARG1))
               (typeattributeset typeattr ARG1))

        (typeattribute typeattr)

        (allow typeattr file (file (map)))))))

(in file.unconfined

    (call .glib.data.data_file_type_transition_file (typeattr))
    (call .glib.gio.lib.lib_file_type_transition_file (typeattr))
    (call .glib.home.conf.user_home_conf_file_type_transition_file (typeattr)))

(in after glib.compileschemas.exec

    (filecon "/usr/lib/([^/]+/)?glib-2\.0/glib-compile-schemas" file
             file_context))

(in after glib.gio.querymodules.exec

    (filecon "/usr/lib/([^/]+/)?glib-2\.0/gio-querymodules" file file_context))
