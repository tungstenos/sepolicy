(in file.unconfined

    (call .systemd.hostname.conf.conf_file_type_transition_file
          (typeattr "hostname"))
    (call .systemd.hostname.conf.conf_file_type_transition_file
          (typeattr "machine-info")))

(in systemd.hostname

    (macro unix_stream_connect ((type ARG1))
           (call connectto_subj_unix_stream_sockets (ARG1))
           (call run.write_file_sock_files (ARG1)))

    (blockinherit .dbus.nameclient.template)
    (blockinherit .sys.agent.template)

    (allow subj self (capability (sys_admin)))
    (allow subj self (process (setfscreate)))
    (allow subj self create_unix_dgram_socket)
    (allow subj self create_unix_stream_stream_socket)

    (call conf.manage_file_files (subj))
    (call conf.conf_file_type_transition_file (subj "*"))

    (call run.manage_file_sock_files (subj))
    (call run.systemd_run_file_type_transition_file (subj))

    (call systemd.logparseenv.type (subj))
    (call systemd.notify.type (subj))
    (call systemd.propagate.type (subj))

    (call systemd.journal.relay_msgs.type (subj))

    (call systemd.run.readwrite_file_dirs (subj))
    ;; FIXME: systemd-hostnamed currently does not use setfscreate (/run/systemd/.#default-hostname5GZwms)
    (call systemd.run.manage_file_files (subj))

    (call systemd.udev.run.read_file_pattern.type (subj))

    (call .caplastcap.read_sysctlfile_pattern.type (subj))

    (call .cgroup.getattr_fs_pattern.type (subj))

    (call .class.traverse_sysfile_pattern.type (subj))

    (call .conf.deletename_file_dirs (subj))

    (call .cpuinfo.read_procfile_files (subj))

    (call .crypto.read_sysctlfile_pattern.type (subj))

    (call .dbus.monitoravailability.type (subj))

    (call .devices.read_sysfile_files (subj))
    (call .devices.traverse_sysfile_pattern.type (subj))

    (call .firmware.read_sysfile_pattern.type (subj))

    (call .hypervisor.search_sysfile_pattern.type (subj))

    (call .locale.data.map_file_pattern.type (subj))
    (call .locale.read_file_pattern.type (subj))

    (call .machineid.read_file_files (subj))

    (call .ngroupsmax.read_sysctlfile_pattern.type (subj))

    (call .ns.getattr_fs_files_pattern.type (subj))

    (call .osrelease.read_sysctlfile_pattern.type (subj))

    (call .proc.getattr_fs_pattern.type (subj))

    (call .random.read_sysctlfile_pattern.type (subj))

    (call .selinux.file.read_file_pattern.type (subj))
    (call .selinux.mapread_fs_pattern.type (subj))

    (call .sys.getattr_fs_pattern.type (subj))

    (call .vmci.read_nodedev_chr_files (subj))

    (call .xattr.getattr_fs_pattern.type (subj))

    (optional systemdhostname_polkit
              (call .polkit.sendmsg_subj_dbus.type (subj)))

    (block conf

      (filecon "/etc/\.#hostname.*" file file_context)
      (filecon "/etc/\.#machine-info.*" file file_context)

      (filecon "/etc/hostname" file file_context)
      (filecon "/etc/machine-info" file file_context)

      (macro conf_file_type_transition_file ((type ARG1)(name ARG2))
             (call .conf.file_type_transition
                   (ARG1 file file ARG2)))

      (blockinherit .file.conf.base_template)
      (blockinherit .file.macro_template_files))

    (block unit

      (filecon "/usr/lib/systemd/system/systemd-hostnamed\.service.*" file
               file_context)
      (filecon "/usr/lib/systemd/system/systemd-hostnamed\.socket.*" file
               file_context)

      (blockinherit .file.unit.template)

      (call .dbus.activated.unit.type (file))))

(in after systemd.hostname.exec

    (filecon "/usr/lib/systemd/systemd-hostnamed" file file_context))
