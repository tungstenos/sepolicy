(block termdev

  (macro dontaudit_readwriteinherited_all_chr_files ((type ARG1))
         (dontaudit ARG1 typeattr readwriteinherited_chr_file))

  (macro getattr_all_chr_files ((type ARG1))
         (allow ARG1 typeattr (chr_file (getattr))))

  (macro open_all_chr_files ((type ARG1))
         (allow ARG1 typeattr (chr_file (open))))

  (macro type ((type ARG1))
         (typeattributeset typeattr ARG1))

  (macro watch_all_chr_files ((type ARG1))
         (allow ARG1 typeattr (chr_file (watch))))

  (macro watchreads_all_chr_files ((type ARG1))
         (allow ARG1 typeattr (chr_file (watch_reads))))

  (typeattribute typeattr)

  (blockinherit .file.all_macro_template_chr_files)

  (call .dev.type (typeattr))

  (block silenced

    (macro type ((type ARG1))
           (typeattributeset typeattr ARG1))

    (typeattribute typeattr))

  (block unconfined

    (macro type ((type ARG1))
           (typeattributeset typeattr ARG1))

    (typeattribute typeattr)))

(in dev.silenced

    (call .termdev.silenced.type (typeattr)))

(in dev.unconfined

    (call .termdev.unconfined.type (typeattr)))

(in after termdev.appendinherited_all_chr_files
    (allowx ARG1 typeattr IOCTLCONSOLE_NOT_TIOCLINUX)
    (allowx ARG1 typeattr IOCTLTTY_NOT_TIOCSTI)
    (allowx ARG1 typeattr IOCTLVT))

(in after termdev.readwriteinherited_all_chr_files
    (allowx ARG1 typeattr IOCTLCONSOLE_NOT_TIOCLINUX)
    (allowx ARG1 typeattr IOCTLTTY_NOT_TIOCSTI)
    (allowx ARG1 typeattr IOCTLVT))

(in after termdev.writeinherited_all_chr_files
    (allowx ARG1 typeattr IOCTLCONSOLE_NOT_TIOCLINUX)
    (allowx ARG1 typeattr IOCTLTTY_NOT_TIOCSTI)
    (allowx ARG1 typeattr IOCTLVT))
