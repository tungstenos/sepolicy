(in file.unconfined

    (call .hushlogins.home.user_home_file_type_transition_file (typeattr)))

(in hushlogins

    (block home

      (filecon "HOME_DIR/\.hushlogin" file file_context)
      (filecon "HOME_DIR/\.hushlogin\..*" file file_context)

      (macro user_home_file_type_transition_file ((type ARG1))
             (call .user.home.file_type_transition
                   (ARG1 file file ".hushlogin")))

      (blockinherit .file.macro_template_files)
      (blockinherit .file.user.home.base_template)

      (block read_file_pattern

        (macro type ((type ARG1))
               (typeattributeset typeattr ARG1))

        (typeattribute typeattr)

        (call read_file_files (typeattr))

        (call .user.home.search_file_pattern.type (typeattr)))))

(in hushlogins.read_file_pattern

    (call home.read_file_pattern.type (typeattr)))

(in user

    (call .hushlogins.home.manage_file_files (subj))
    (call .hushlogins.home.relabel_file_files (subj))
    (call .hushlogins.home.user_home_file_type_transition_file (subj)))
